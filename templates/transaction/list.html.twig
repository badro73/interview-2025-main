{% extends 'base.html.twig' %}

{% set titleText = account is not null ? "Transaction list for Account " ~ "- " ~ account.currency.value ~ " - Of Business Partner " ~ account.businessPartner.name : "Transaction list" %}

{% block title %}{{ titleText }}{% endblock %}

{% block body %}
    <h1>{{ titleText }}</h1>

    <div class="card bg-light mb-4">
        <div class="card-body">
            <form method="get" action="{{ path('app_transaction_list') }}" class="row g-3 align-items-center">
                <div class="col-auto">
                    <label for="accountId" class="col-form-label">Filter by Account:</label>
                </div>
                <div class="col-auto">
                    <select name="accountId" id="accountId" class="form-select" onchange="this.form.submit()">
                        <option value="">-- All Accounts --</option>
                        {% for acc in all_accounts %}
                            <option value="{{ acc.id }}" {{ account and account.id == acc.id ? 'selected' : '' }}>
                                {{ acc.businessPartner.name }} - {{ acc.currency.value }} ({{ acc.balance }})
                            </option>
                        {% endfor %}
                    </select>
                </div>
                {% if account %}
                    <div class="col-auto">
                        <a href="{{ path('app_transaction_list') }}" class="btn btn-outline-secondary">Clear Filter</a>
                    </div>
                {% endif %}
            </form>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Amount</th>
                <th>Name</th>
                <th>Date</th>
                <th>Executed</th>
                <th>Type</th>
                <th>Country</th>
                <th>Iban</th>
                <th>Account</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for transaction in transactions %}
                <tr>
                    <td>{{ transaction.id }}</td>
                    <td>{{ transaction.amount|number_format(2, '.', '') }}</td>
                    <td>{{ transaction.name }}</td>
                    <td>{{ transaction.date ? transaction.date|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ transaction.executed ? 'Yes' : 'No' }}</td>
                    <td>{{ transaction.type.value }}</td>
                    <td>{{ transaction.country }}</td>
                    <td>{{ transaction.iban }}</td>
                    <td><a href="{{ path('app_account_show', {'id': transaction.account.id}) }}"
                           target="_blank">{{ transaction.account.currency.value }}</a></td>
                    <td>
                        <div class="btn-group" role="group">
                            <a class="btn btn-sm btn-outline-primary"
                               href="{{ path('app_transaction_show', {'id': transaction.id}) }}">Show</a>
                            <a class="btn btn-sm btn-outline-secondary"
                               href="{{ path('app_transaction_edit', {'id': transaction.id}) }}">Edit</a>
                            {% if(transaction.type.value == "payout") and transaction.executed is same as (false) %}
                                <a class="btn btn-sm btn-outline-warning"
                                   href="{{ path('app_transaction_execute', {'id': transaction.id}) }}">Execute</a>
                            {% endif %}
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9">No records found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-sm btn-outline-primary" href="{{ path('app_transaction_new') }}">Create new</a>
{% endblock %}
