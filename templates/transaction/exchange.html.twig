{% extends 'base.html.twig' %}

{% block title %}Currency Exchange{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Currency Exchange</h1>
            <a href="{{ path('app_account_list') }}" class="btn btn-outline-secondary">Back to Accounts</a>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-body">
                        {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.businessPartner, 'Business Partner') }}
                            {{ form_widget(form.businessPartner, {'attr': {'class': 'form-select'}}) }}
                        </div>

                        <div class="row">
                            <div class="col-md-5">
                                {{ form_label(form.fromCurrency, 'From') }}
                                {{ form_widget(form.fromCurrency, {'attr': {'class': 'form-select'}}) }}
                            </div>
                            <div class="col-md-2 d-flex align-items-center justify-content-center pt-4">
                                <i class="bi bi-arrow-right-circle h3">âžœ</i>
                            </div>
                            <div class="col-md-5">
                                {{ form_label(form.toCurrency, 'To') }}
                                {{ form_widget(form.toCurrency, {'attr': {'class': 'form-select'}}) }}
                            </div>
                        </div>

                        <div class="mb-3 mt-3">
                            {{ form_label(form.amount, 'Amount to Sell') }}
                            <div class="input-group">
                                {{ form_widget(form.amount, {'attr': {'class': 'form-control', 'placeholder': '0.00'}}) }}
                            </div>
                            <small class="text-muted">The exchange rate is fixed at 1.1</small>
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.finalAmount, 'You will receive (approx.)') }}
                            <div class="input-group">
                                {{ form_widget(form.finalAmount, {'attr': {'id': 'output-amount'}}) }}
                                <span class="input-group-text bg-primary text-white" id="target-currency-label">EUR</span>
                            </div>
                            <small class="text-muted">Rate: 1.1</small>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 mt-3">
                            Confirm Exchange
                        </button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="alert alert-info">
                    <h5>ðŸ’¡ Financial Impact</h5>
                    <p>This operation will perform the following movements:</p>
                    <ol>
                        <li>Sell <strong>1000.00 CHF</strong></li>
                        <li>Convert to <strong>EUR</strong></li>
                        <li>The system will credit <strong>1100.00 EUR</strong> automatically.</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const inputAmount = document.querySelector('[name*="[amount]"]');
            const outputAmount = document.querySelector('[name*="[finalAmount]"]');
            const toCurrencySelect = document.querySelector('[name*="[toCurrency]"]');

            const rate = 1.1;

            if (inputAmount && outputAmount) {
                inputAmount.addEventListener('input', function() {
                    const val = parseFloat(this.value);
                    if (!isNaN(val)) {
                        outputAmount.value = (val * rate).toFixed(2);
                    } else {
                        outputAmount.value = '';
                    }
                });
            }

            if (toCurrencySelect) {
                toCurrencySelect.addEventListener('change', function() {
                    const label = document.getElementById('target-currency-label');
                    if (label) {
                        label.textContent = this.options[this.selectedIndex].text;
                    }
                });
            }
        });
    </script>
{% endblock %}
